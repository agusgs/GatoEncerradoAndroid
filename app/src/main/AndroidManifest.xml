<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.edu.unq.ciu.gato_encerrado_android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ar.edu.unq.ciu.gato_encerrado_android.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="ar.edu.unq.ciu.gato_encerrado_android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.edu.unq.ciu.gato_encerrado_android.MainActivity" />
        </activity>

    </application>

</manifest>